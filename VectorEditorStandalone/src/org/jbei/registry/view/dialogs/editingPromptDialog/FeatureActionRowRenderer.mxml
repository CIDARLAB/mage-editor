<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" horizontalAlign="center" paddingBottom="0" paddingTop="0" paddingLeft="0" paddingRight="0" borderThickness="0">
	<mx:Script>
		<![CDATA[
			private function onRemoveCheckBoxChange(event:Event):void
			{
				data.removeAction = this.removeCheckBox.selected;
			}
		]]>
	</mx:Script>
	
	<mx:CheckBox id="removeCheckBox" selected="{ data.removeAction }" enabled="{ data.enabled }" change="onRemoveCheckBoxChange(event)"/>
</mx:HBox>
